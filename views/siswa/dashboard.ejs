<!DOCTYPE html>
<html lang="id">
<head>
  <%- include('../partials/head') %>
</head>
<body class="min-h-screen flex bg-slate-bg font-sans">

  <%- include('../partials/sidebar') %>

  <div class="flex-1 flex flex-col h-screen overflow-hidden">
    <!-- Top Header -->
    <header class="bg-white lg:bg-transparent p-4 lg:p-0 flex justify-between items-center lg:justify-end lg:pr-8 lg:pt-6">
      <button onclick="toggleSidebar()" class="lg:hidden text-gray-600 text-xl p-2 hover:bg-gray-100 rounded-lg">
        <i class="fa-solid fa-bars"></i>
      </button>
      <div class="flex items-center gap-4">
        <button class="w-10 h-10 rounded-full bg-white shadow-soft flex items-center justify-center text-gray-500 hover:text-sma-grey relative">
          <i class="fa-regular fa-bell"></i>
          <span class="absolute top-2 right-2.5 w-2 h-2 bg-red-500 rounded-full border-2 border-white"></span>
        </button>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 overflow-y-auto p-4 lg:p-8">
      <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 auto-rows-[minmax(180px,auto)]">

        <!-- Welcome Banner -->
        <div class="lg:col-span-3 bg-gradient-to-r from-sma-grey to-slate-600 rounded-3xl shadow-premium p-8 relative overflow-hidden text-white flex flex-col justify-center items-start">
          <div class="absolute top-0 right-0 w-64 h-64 bg-white opacity-5 rounded-full -mr-16 -mt-16 blur-2xl"></div>
          <div class="absolute bottom-0 left-1/3 w-32 h-32 bg-blue-300 opacity-10 rounded-full blur-xl"></div>

          <div class="relative z-10 w-full">
            <p class="text-slate-200 mb-1 font-medium">
              <%= new Date().toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' }) %>
            </p>
            <h2 class="text-3xl md:text-4xl font-bold mb-2 leading-tight text-balance">
              Selamat Datang, <br>
              <span class="text-white drop-shadow-sm"><%= user.nama_lengkap %>!</span>
            </h2>
            <p class="text-sm text-slate-300 max-w-md mt-2">Semangat belajar hari ini! Jangan lupa cek jadwal dan tugas terbaru kamu di portal ini.</p>

            <a href="/siswa/rapor" class="mt-6 inline-block px-6 py-3 bg-white text-sma-grey rounded-xl font-bold text-sm hover:bg-slate-50 transition-colors shadow-lg">
              Lihat Rapor
            </a>
          </div>
        </div>

        <!-- Announcements -->
        <div class="lg:row-span-2 bg-white rounded-3xl shadow-soft p-6 flex flex-col border border-gray-100">
          <div class="flex items-center justify-between mb-6">
            <h3 class="font-bold text-gray-800">Pengumuman</h3>
            <span class="text-sma-grey text-xs hover:underline cursor-pointer">Lihat Semua</span>
          </div>

          <div class="flex-1 space-y-4 overflow-y-auto pr-2">
            <% var announcements = [
              { month: 'FEB', day: '15', title: 'Ujian Tengah Semester', desc: 'Jadwal UTS akan dimulai minggu depan. Harap persiapkan diri.', color: 'blue' },
              { month: 'FEB', day: '10', title: 'Lomba Kebersihan Kelas', desc: 'Dalam rangka bulan bahasa, diadakan lomba dekorasi kelas.', color: 'orange' },
              { month: 'FEB', day: '05', title: 'Libur Nasional', desc: 'Sekolah libur memperingati hari besar nasional.', color: 'purple' }
            ]; %>
            <% announcements.forEach(function(a) { %>
            <div class="flex gap-3 pb-4 border-b border-gray-50">
              <div class="w-10 h-10 rounded-lg bg-<%= a.color %>-50 text-<%= a.color %>-500 flex-shrink-0 flex items-center justify-center text-xs font-bold">
                <div class="text-center leading-tight">
                  <div><%= a.month %></div>
                  <div class="text-lg"><%= a.day %></div>
                </div>
              </div>
              <div>
                <h4 class="text-sm font-bold text-gray-800 leading-snug mb-1"><%= a.title %></h4>
                <p class="text-xs text-gray-500 line-clamp-2"><%= a.desc %></p>
              </div>
            </div>
            <% }); %>
          </div>
        </div>

        <!-- Stats Cards -->
        <div class="lg:col-span-3 grid grid-cols-1 sm:grid-cols-3 gap-6">
          <div class="bento-card bg-white p-6 rounded-3xl shadow-soft flex items-center justify-between border border-gray-100">
            <div>
              <p class="text-gray-400 text-xs font-semibold uppercase tracking-wider mb-1">IPK Semester</p>
              <h3 class="text-2xl font-bold text-gray-800"><%= typeof stats !== 'undefined' ? stats.ipk : '3.85' %></h3>
              <span class="text-xs font-medium text-green-500 mt-2 inline-flex items-center gap-1 bg-green-50 px-2 py-1 rounded-full">
                <i class="fa-solid fa-arrow-trend-up"></i> +0.2
              </span>
            </div>
            <div class="w-12 h-12 rounded-2xl flex items-center justify-center text-xl bg-blue-50">
              <i class="fa-solid fa-graduation-cap text-blue-500"></i>
            </div>
          </div>

          <div class="bento-card bg-white p-6 rounded-3xl shadow-soft flex items-center justify-between border border-gray-100">
            <div>
              <p class="text-gray-400 text-xs font-semibold uppercase tracking-wider mb-1">Peringkat Kelas</p>
              <h3 class="text-2xl font-bold text-gray-800">#<%= typeof stats !== 'undefined' ? stats.ranking : '5' %></h3>
            </div>
            <div class="w-12 h-12 rounded-2xl flex items-center justify-center text-xl bg-yellow-50">
              <i class="fa-solid fa-trophy text-yellow-500"></i>
            </div>
          </div>

          <div class="bento-card bg-white p-6 rounded-3xl shadow-soft flex items-center justify-between border border-gray-100">
            <div>
              <p class="text-gray-400 text-xs font-semibold uppercase tracking-wider mb-1">Kehadiran</p>
              <h3 class="text-2xl font-bold text-gray-800"><%= typeof stats !== 'undefined' ? stats.kehadiran : '98' %>%</h3>
            </div>
            <div class="w-12 h-12 rounded-2xl flex items-center justify-center text-xl bg-green-50">
              <i class="fa-solid fa-clock text-green-500"></i>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="lg:col-span-2 bg-white rounded-3xl shadow-soft p-6 border border-gray-100">
          <h3 class="font-bold text-gray-800 mb-4">Akses Cepat</h3>
          <div class="grid grid-cols-2 gap-4">
            <a href="/siswa/rapor" class="bento-card flex items-center gap-4 p-4 rounded-2xl bg-blue-50 border border-blue-100 hover:bg-blue-100 transition-all">
              <div class="w-10 h-10 bg-blue-500 rounded-xl flex items-center justify-center text-white"><i class="fa-solid fa-book-open"></i></div>
              <div>
                <p class="text-sm font-bold text-gray-800">Lihat Rapor</p>
                <p class="text-xs text-gray-500">Cek nilai terbaru</p>
              </div>
            </a>
            <a href="/siswa/career-builder" class="bento-card flex items-center gap-4 p-4 rounded-2xl bg-green-50 border border-green-100 hover:bg-green-100 transition-all">
              <div class="w-10 h-10 bg-green-500 rounded-xl flex items-center justify-center text-white"><i class="fa-solid fa-briefcase"></i></div>
              <div>
                <p class="text-sm font-bold text-gray-800">Career Builder</p>
                <p class="text-xs text-gray-500">Buat CV otomatis</p>
              </div>
            </a>
          </div>
        </div>

        <!-- Recent Courses -->
        <div class="lg:col-span-2 bg-white rounded-3xl shadow-soft p-6 border border-gray-100">
          <h3 class="font-bold text-gray-800 mb-4">Mata Pelajaran</h3>
          <div class="space-y-3">
            <% var courses = [
              { name: 'Matematika Lanjut', code: 'MAT-01', teacher: 'Bpk. Budi Santoso', progress: 75, color: 'blue' },
              { name: 'Fisika Dasar', code: 'FIS-01', teacher: 'Ibu Siti Aminah', progress: 45, color: 'orange' }
            ]; %>
            <% courses.forEach(function(c) { %>
            <div class="flex items-center gap-4 p-3 rounded-xl hover:bg-slate-50 transition-colors">
              <div class="w-10 h-10 rounded-xl bg-<%= c.color %>-500 bg-opacity-10 flex items-center justify-center">
                <i class="fa-solid fa-book text-<%= c.color %>-500"></i>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-bold text-gray-800 truncate"><%= c.name %></p>
                <p class="text-xs text-gray-400"><%= c.teacher %></p>
              </div>
              <div class="text-right">
                <span class="text-xs font-bold text-gray-500"><%= c.progress %>%</span>
                <div class="w-16 bg-gray-100 rounded-full h-1.5 mt-1">
                  <div class="bg-<%= c.color %>-500 h-1.5 rounded-full" style="width: <%= c.progress %>%"></div>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>

        <!-- Footer -->
        <div class="lg:col-span-4 text-center py-4">
          <p class="text-xs text-gray-400">&copy; <%= new Date().getFullYear() %> E-Rapor Digital SMA. All rights reserved.</p>
        </div>
      </div>
    </main>
  </div>

</body>
</html>
