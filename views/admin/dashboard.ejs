<!DOCTYPE html>
<html lang="id">
<head>
  <%- include('../partials/head') %>
</head>
<body class="min-h-screen flex bg-slate-bg font-sans">

  <%- include('../partials/sidebar') %>

  <div class="flex-1 flex flex-col h-screen overflow-hidden">
    <header class="bg-white lg:bg-transparent p-4 lg:p-0 flex justify-between items-center lg:justify-end lg:pr-8 lg:pt-6">
      <button onclick="toggleSidebar()" class="lg:hidden text-gray-600 text-xl p-2 hover:bg-gray-100 rounded-lg">
        <i class="fa-solid fa-bars"></i>
      </button>
      <div class="flex items-center gap-4">
        <button class="w-10 h-10 rounded-full bg-white shadow-soft flex items-center justify-center text-gray-500 hover:text-sma-grey relative">
          <i class="fa-regular fa-bell"></i>
        </button>
      </div>
    </header>

    <main class="flex-1 overflow-y-auto p-4 lg:p-8">
      <div class="max-w-7xl mx-auto space-y-6">

        <!-- Welcome -->
        <div class="bg-gradient-to-r from-gray-800 to-gray-600 rounded-3xl shadow-premium p-8 relative overflow-hidden text-white">
          <div class="absolute top-0 right-0 w-64 h-64 bg-white opacity-5 rounded-full -mr-16 -mt-16 blur-2xl"></div>
          <p class="text-gray-300 mb-1 font-medium">
            <%= new Date().toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' }) %>
          </p>
          <h2 class="text-3xl font-bold mb-2">Panel Administrator</h2>
          <p class="text-sm text-gray-300 max-w-lg">Kelola seluruh data master, kurikulum, dan monitoring sistem E-Rapor.</p>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bento-card bg-white p-6 rounded-3xl shadow-soft flex items-center justify-between border border-gray-100">
            <div>
              <p class="text-gray-400 text-xs font-semibold uppercase tracking-wider mb-1">Total Siswa</p>
              <h3 class="text-2xl font-bold text-gray-800"><%= typeof stats !== 'undefined' ? stats.totalSiswa : 0 %></h3>
            </div>
            <div class="w-12 h-12 rounded-2xl flex items-center justify-center text-xl bg-blue-50">
              <i class="fa-solid fa-users text-blue-500"></i>
            </div>
          </div>
          <div class="bento-card bg-white p-6 rounded-3xl shadow-soft flex items-center justify-between border border-gray-100">
            <div>
              <p class="text-gray-400 text-xs font-semibold uppercase tracking-wider mb-1">Total Guru</p>
              <h3 class="text-2xl font-bold text-gray-800"><%= typeof stats !== 'undefined' ? stats.totalGuru : 0 %></h3>
            </div>
            <div class="w-12 h-12 rounded-2xl flex items-center justify-center text-xl bg-green-50">
              <i class="fa-solid fa-chalkboard-user text-green-500"></i>
            </div>
          </div>
          <div class="bento-card bg-white p-6 rounded-3xl shadow-soft flex items-center justify-between border border-gray-100">
            <div>
              <p class="text-gray-400 text-xs font-semibold uppercase tracking-wider mb-1">Total Kelas</p>
              <h3 class="text-2xl font-bold text-gray-800"><%= typeof stats !== 'undefined' ? stats.totalKelas : 0 %></h3>
            </div>
            <div class="w-12 h-12 rounded-2xl flex items-center justify-center text-xl bg-orange-50">
              <i class="fa-solid fa-school text-orange-500"></i>
            </div>
          </div>
          <div class="bento-card bg-white p-6 rounded-3xl shadow-soft flex items-center justify-between border border-gray-100">
            <div>
              <p class="text-gray-400 text-xs font-semibold uppercase tracking-wider mb-1">Mata Pelajaran</p>
              <h3 class="text-2xl font-bold text-gray-800"><%= typeof stats !== 'undefined' ? stats.totalMapel : 0 %></h3>
            </div>
            <div class="w-12 h-12 rounded-2xl flex items-center justify-center text-xl bg-indigo-50">
              <i class="fa-solid fa-book text-indigo-500"></i>
            </div>
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <a href="/admin/siswa" class="bento-card bg-white p-6 rounded-3xl shadow-soft border border-gray-100 flex items-center gap-4">
            <div class="w-14 h-14 bg-blue-50 rounded-2xl flex items-center justify-center">
              <i class="fa-solid fa-user-plus text-xl text-blue-600"></i>
            </div>
            <div>
              <h3 class="font-bold text-gray-800">Data Siswa</h3>
              <p class="text-xs text-gray-500">Kelola data master siswa</p>
            </div>
            <i class="fa-solid fa-arrow-right text-gray-300 ml-auto"></i>
          </a>
          <a href="/admin/guru" class="bento-card bg-white p-6 rounded-3xl shadow-soft border border-gray-100 flex items-center gap-4">
            <div class="w-14 h-14 bg-green-50 rounded-2xl flex items-center justify-center">
              <i class="fa-solid fa-chalkboard-user text-xl text-green-600"></i>
            </div>
            <div>
              <h3 class="font-bold text-gray-800">Data Guru</h3>
              <p class="text-xs text-gray-500">Kelola data master guru</p>
            </div>
            <i class="fa-solid fa-arrow-right text-gray-300 ml-auto"></i>
          </a>
          <a href="/admin/kelas" class="bento-card bg-white p-6 rounded-3xl shadow-soft border border-gray-100 flex items-center gap-4">
            <div class="w-14 h-14 bg-orange-50 rounded-2xl flex items-center justify-center">
              <i class="fa-solid fa-school text-xl text-orange-600"></i>
            </div>
            <div>
              <h3 class="font-bold text-gray-800">Data Kelas</h3>
              <p class="text-xs text-gray-500">Kelola kelas & kurikulum</p>
            </div>
            <i class="fa-solid fa-arrow-right text-gray-300 ml-auto"></i>
          </a>
        </div>

        <!-- Recent Logs -->
        <div class="bg-white rounded-3xl shadow-soft p-6 border border-gray-100">
          <h3 class="font-bold text-gray-800 mb-4">Log Aktivitas Terbaru</h3>
          <div class="space-y-3">
            <% if (typeof logs !== 'undefined' && logs.length > 0) { %>
              <% logs.forEach(function(log) { %>
              <div class="flex items-center gap-4 p-3 rounded-xl hover:bg-slate-50 transition-colors">
                <div class="w-8 h-8 rounded-lg bg-slate-100 flex items-center justify-center text-sma-grey text-xs">
                  <i class="fa-solid fa-clock-rotate-left"></i>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm text-gray-700 truncate"><%= log.aksi %></p>
                  <p class="text-xs text-gray-400"><%= log.detail %></p>
                </div>
                <span class="text-xs text-gray-400 whitespace-nowrap"><%= new Date(log.created_at).toLocaleString('id-ID') %></span>
              </div>
              <% }); %>
            <% } else { %>
              <p class="text-sm text-gray-400 text-center py-8">Belum ada log aktivitas.</p>
            <% } %>
          </div>
        </div>

      </div>
    </main>
  </div>

</body>
</html>
