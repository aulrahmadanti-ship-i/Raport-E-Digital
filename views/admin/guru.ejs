<!DOCTYPE html>
<html lang="id">
<head>
  <%- include('../partials/head') %>
</head>
<body class="min-h-screen flex bg-slate-bg font-sans">

  <%- include('../partials/sidebar') %>

  <div class="flex-1 flex flex-col h-screen overflow-hidden">
    <header class="bg-white lg:bg-transparent p-4 lg:p-0 flex justify-between items-center lg:justify-end lg:pr-8 lg:pt-6">
      <button onclick="toggleSidebar()" class="lg:hidden text-gray-600 text-xl p-2 hover:bg-gray-100 rounded-lg">
        <i class="fa-solid fa-bars"></i>
      </button>
      <div class="flex items-center gap-4">
        <button class="w-10 h-10 rounded-full bg-white shadow-soft flex items-center justify-center text-gray-500 hover:text-sma-grey relative">
          <i class="fa-regular fa-bell"></i>
        </button>
      </div>
    </header>

    <main class="flex-1 overflow-y-auto p-4 lg:p-8">
      <div class="max-w-7xl mx-auto space-y-6">

        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
          <div>
            <h2 class="text-2xl font-bold text-gray-800">Data Guru</h2>
            <p class="text-sm text-gray-500">Kelola data master guru dan tenaga pengajar.</p>
          </div>
          <button onclick="document.getElementById('addGuruModal').classList.remove('hidden')"
                  class="bg-sma-grey hover:bg-sma-dark text-white px-6 py-2.5 rounded-xl text-sm font-bold shadow-lg transition-all flex items-center gap-2">
            <i class="fa-solid fa-plus"></i> Tambah Guru
          </button>
        </div>

        <% if (typeof message !== 'undefined' && message) { %>
        <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-xl text-sm flex items-center gap-2">
          <i class="fa-solid fa-circle-check"></i> <%= message %>
        </div>
        <% } %>
        <% if (typeof errorMsg !== 'undefined' && errorMsg) { %>
        <div class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-xl text-sm flex items-center gap-2">
          <i class="fa-solid fa-circle-exclamation"></i> <%= errorMsg %>
        </div>
        <% } %>

        <div class="bg-white rounded-3xl shadow-soft overflow-hidden border border-gray-100">
          <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
              <thead>
                <tr class="bg-slate-50 text-xs font-bold text-sma-grey uppercase tracking-wider">
                  <th class="p-4 w-16 text-center">No</th>
                  <th class="p-4">NIP</th>
                  <th class="p-4">Nama Lengkap</th>
                  <th class="p-4">Mata Pelajaran</th>
                  <th class="p-4">Email</th>
                  <th class="p-4">Telepon</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-50 text-sm">
                <% if (typeof guruList !== 'undefined' && guruList.length > 0) { %>
                  <% guruList.forEach(function(g, idx) { %>
                  <tr class="hover:bg-slate-50/50 transition-colors">
                    <td class="p-4 text-center text-gray-400"><%= idx + 1 %></td>
                    <td class="p-4 font-mono text-xs text-gray-500"><%= g.nip || '-' %></td>
                    <td class="p-4 font-semibold text-gray-700"><%= g.nama_lengkap %></td>
                    <td class="p-4 text-gray-500"><%= g.mata_pelajaran || '-' %></td>
                    <td class="p-4 text-gray-400 text-xs"><%= g.email || '-' %></td>
                    <td class="p-4 text-gray-400 text-xs"><%= g.telepon || '-' %></td>
                  </tr>
                  <% }); %>
                <% } else { %>
                  <tr><td colspan="6" class="py-12 text-center text-gray-400"><i class="fa-solid fa-inbox text-3xl mb-3 block"></i>Belum ada data guru.</td></tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </main>
  </div>

  <!-- Add Guru Modal -->
  <div id="addGuruModal" class="hidden fixed inset-0 bg-black/30 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-3xl shadow-premium max-w-lg w-full p-8 relative">
      <button onclick="document.getElementById('addGuruModal').classList.add('hidden')" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600">
        <i class="fa-solid fa-xmark text-xl"></i>
      </button>
      <h3 class="text-xl font-bold text-gray-800 mb-6">Tambah Guru Baru</h3>
      <form action="/admin/guru/add" method="POST" class="space-y-4">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="text-xs font-semibold text-gray-500 mb-1 block">Nama Lengkap</label>
            <input type="text" name="nama_lengkap" required class="w-full bg-slate-50 border border-gray-200 rounded-xl px-4 py-2.5 text-sm focus:outline-none focus:border-sma-grey">
          </div>
          <div>
            <label class="text-xs font-semibold text-gray-500 mb-1 block">Username</label>
            <input type="text" name="username" required class="w-full bg-slate-50 border border-gray-200 rounded-xl px-4 py-2.5 text-sm focus:outline-none focus:border-sma-grey">
          </div>
          <div>
            <label class="text-xs font-semibold text-gray-500 mb-1 block">NIP</label>
            <input type="text" name="nip" class="w-full bg-slate-50 border border-gray-200 rounded-xl px-4 py-2.5 text-sm focus:outline-none focus:border-sma-grey">
          </div>
          <div>
            <label class="text-xs font-semibold text-gray-500 mb-1 block">Mata Pelajaran</label>
            <input type="text" name="mata_pelajaran" class="w-full bg-slate-50 border border-gray-200 rounded-xl px-4 py-2.5 text-sm focus:outline-none focus:border-sma-grey">
          </div>
          <div>
            <label class="text-xs font-semibold text-gray-500 mb-1 block">Email</label>
            <input type="email" name="email" class="w-full bg-slate-50 border border-gray-200 rounded-xl px-4 py-2.5 text-sm focus:outline-none focus:border-sma-grey">
          </div>
          <div>
            <label class="text-xs font-semibold text-gray-500 mb-1 block">Telepon</label>
            <input type="text" name="telepon" class="w-full bg-slate-50 border border-gray-200 rounded-xl px-4 py-2.5 text-sm focus:outline-none focus:border-sma-grey">
          </div>
        </div>
        <p class="text-xs text-gray-400">Password default: guru123</p>
        <button type="submit" class="w-full bg-sma-grey hover:bg-sma-dark text-white py-3 rounded-xl font-bold text-sm shadow-lg transition-all">
          Tambah Guru
        </button>
      </form>
    </div>
  </div>

</body>
</html>
