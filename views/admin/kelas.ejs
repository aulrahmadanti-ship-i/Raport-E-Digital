<!DOCTYPE html>
<html lang="id">
<head>
  <%- include('../partials/head') %>
</head>
<body class="min-h-screen flex bg-slate-bg font-sans">

  <%- include('../partials/sidebar') %>

  <div class="flex-1 flex flex-col h-screen overflow-hidden">
    <header class="bg-white lg:bg-transparent p-4 lg:p-0 flex justify-between items-center lg:justify-end lg:pr-8 lg:pt-6">
      <button onclick="toggleSidebar()" class="lg:hidden text-gray-600 text-xl p-2 hover:bg-gray-100 rounded-lg">
        <i class="fa-solid fa-bars"></i>
      </button>
      <div class="flex items-center gap-4">
        <button class="w-10 h-10 rounded-full bg-white shadow-soft flex items-center justify-center text-gray-500 hover:text-sma-grey relative">
          <i class="fa-regular fa-bell"></i>
        </button>
      </div>
    </header>

    <main class="flex-1 overflow-y-auto p-4 lg:p-8">
      <div class="max-w-7xl mx-auto space-y-6">

        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
          <div>
            <h2 class="text-2xl font-bold text-gray-800">Data Kelas</h2>
            <p class="text-sm text-gray-500">Kelola data kelas dan wali kelas.</p>
          </div>
          <button onclick="document.getElementById('addKelasModal').classList.remove('hidden')"
                  class="bg-sma-grey hover:bg-sma-dark text-white px-6 py-2.5 rounded-xl text-sm font-bold shadow-lg transition-all flex items-center gap-2">
            <i class="fa-solid fa-plus"></i> Tambah Kelas
          </button>
        </div>

        <% if (typeof message !== 'undefined' && message) { %>
        <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-xl text-sm flex items-center gap-2">
          <i class="fa-solid fa-circle-check"></i> <%= message %>
        </div>
        <% } %>
        <% if (typeof errorMsg !== 'undefined' && errorMsg) { %>
        <div class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-xl text-sm flex items-center gap-2">
          <i class="fa-solid fa-circle-exclamation"></i> <%= errorMsg %>
        </div>
        <% } %>

        <!-- Kelas Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% if (typeof kelasList !== 'undefined' && kelasList.length > 0) { %>
            <% kelasList.forEach(function(k) { %>
            <div class="bento-card bg-white p-6 rounded-3xl shadow-soft border border-gray-100">
              <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-blue-50 rounded-2xl flex items-center justify-center text-blue-500 text-xl">
                  <i class="fa-solid fa-school"></i>
                </div>
                <span class="text-xs font-bold text-gray-400 bg-slate-50 px-2 py-1 rounded-lg"><%= k.tahun_ajaran %></span>
              </div>
              <h3 class="text-lg font-bold text-gray-800 mb-1"><%= k.nama_kelas %></h3>
              <p class="text-sm text-gray-500 mb-3">Jurusan: <%= k.jurusan || '-' %></p>
              <div class="flex items-center gap-2 text-xs text-gray-400">
                <i class="fa-solid fa-chalkboard-user"></i>
                <span>Wali Kelas: <span class="font-semibold text-gray-600"><%= k.wali_kelas || 'Belum ditentukan' %></span></span>
              </div>
            </div>
            <% }); %>
          <% } else { %>
            <div class="col-span-full text-center py-16 text-gray-400">
              <i class="fa-solid fa-school text-4xl mb-4 block"></i>
              <p>Belum ada data kelas.</p>
            </div>
          <% } %>
        </div>

      </div>
    </main>
  </div>

  <!-- Add Kelas Modal -->
  <div id="addKelasModal" class="hidden fixed inset-0 bg-black/30 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-3xl shadow-premium max-w-lg w-full p-8 relative">
      <button onclick="document.getElementById('addKelasModal').classList.add('hidden')" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600">
        <i class="fa-solid fa-xmark text-xl"></i>
      </button>
      <h3 class="text-xl font-bold text-gray-800 mb-6">Tambah Kelas Baru</h3>
      <form action="/admin/kelas/add" method="POST" class="space-y-4">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="text-xs font-semibold text-gray-500 mb-1 block">Nama Kelas</label>
            <input type="text" name="nama_kelas" required placeholder="XII-IPA 3" class="w-full bg-slate-50 border border-gray-200 rounded-xl px-4 py-2.5 text-sm focus:outline-none focus:border-sma-grey">
          </div>
          <div>
            <label class="text-xs font-semibold text-gray-500 mb-1 block">Jurusan</label>
            <select name="jurusan" class="w-full bg-slate-50 border border-gray-200 rounded-xl px-4 py-2.5 text-sm focus:outline-none focus:border-sma-grey">
              <option value="IPA">IPA</option>
              <option value="IPS">IPS</option>
              <option value="Bahasa">Bahasa</option>
            </select>
          </div>
          <div>
            <label class="text-xs font-semibold text-gray-500 mb-1 block">Tahun Ajaran</label>
            <input type="text" name="tahun_ajaran" required value="2024/2025" class="w-full bg-slate-50 border border-gray-200 rounded-xl px-4 py-2.5 text-sm focus:outline-none focus:border-sma-grey">
          </div>
          <div>
            <label class="text-xs font-semibold text-gray-500 mb-1 block">Wali Kelas</label>
            <select name="wali_kelas_id" class="w-full bg-slate-50 border border-gray-200 rounded-xl px-4 py-2.5 text-sm focus:outline-none focus:border-sma-grey">
              <option value="">-- Pilih Guru --</option>
              <% if (typeof guruList !== 'undefined') { guruList.forEach(function(g) { %>
                <option value="<%= g.id %>"><%= g.nama_lengkap %></option>
              <% }); } %>
            </select>
          </div>
        </div>
        <button type="submit" class="w-full bg-sma-grey hover:bg-sma-dark text-white py-3 rounded-xl font-bold text-sm shadow-lg transition-all">
          Tambah Kelas
        </button>
      </form>
    </div>
  </div>

</body>
</html>
