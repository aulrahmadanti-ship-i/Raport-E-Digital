<!-- Tailwind Config -->
<script>
  tailwind.config = {
    theme: {
      extend: {
        fontFamily: {
          sans: ['Poppins', 'sans-serif'],
        },
        colors: {
          sma: {
            grey: '#8E9196',
            dark: '#6B6E72',
            light: '#B0B3B8'
          },
          slate: {
            bg: '#F8FAFC',
